<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="de.envire.jwankel.gpsspeed.MainActivity"
    android:background="@color/material_grey_600">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/textView"
            android:textColor="@color/material_grey_50"
            android:textSize="40dp" />


        <de.envire.jwankel.gpsspeed.BackgroundCircle
            android:id="@+id/myDrawViewCircle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <de.envire.jwankel.gpsspeed.DrawView
            android:id="@+id/myDrawView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <de.envire.jwankel.gpsspeed.BackgroundView
            android:id="@+id/myDrawViewBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewFixed"
            android:src="@drawable/ic_gps_fixed_white_24dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewNotFixed"
            android:src="@drawable/ic_gps_not_fixed_white_24dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewOff"
            android:src="@drawable/ic_gps_off_white_24dp" />


</RelativeLayout>
